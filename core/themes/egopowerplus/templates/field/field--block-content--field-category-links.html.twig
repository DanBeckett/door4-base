<ul class="product_category_links">
  {% for item in items %}
    <li class="width-{{ item.content['#paragraph'].field_panel_width.value }}">
      <a href="{{ item.content['#paragraph'].field_link_url.value }}" class="link background-{{ item.content['#paragraph'].field_palette.value }}">
        <div class="content_wrapper product-image-align-{{ item.content['#paragraph'].field_image_align.value }} product-image-size-{{ item.content['#paragraph'].field_image_size.value }}" style="background-image: url({{ file_url(item.content['#paragraph'].field_image.entity.uri[0].value) }});">
          <div class="text_wrapper align-{{ item.content['#paragraph'].field_text_align.value }}">
            <div class="title">{{ item.content['#paragraph'].field_cta_title.value|raw }}</div>
            <div class="subtitle">{{ item.content['#paragraph'].field_cta_subtitle.value|raw }}</div>
            <div class="cta">
              {{ item.content['#paragraph'].field_cta_text.value }}
              <i class="fa fa-angle-right"></i>
            </div>
          </div>
        </div>
      </a>
    </li>
  {% endfor %}
</ul>

                    <div class="specification">
                    
                        <div class="label">Rotating Handle</div>
                        
                        <div class="value">{{ content.field_spec_rotating_handle }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_vibration_ms2|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Vibration</div>
                        
                        <div class="value">{{ content.field_spec_vibration_ms2 }}M/S2</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_weight_wo_battery_kg|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Weight without Battery</div>
                        
                        <div class="value">{{ content.field_spec_weight_wo_battery_kg }}kg</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_motor_type|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Motor Type</div>
                        
                        <div class="value">{{ content.field_spec_motor_type }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

        </ul><!-- .specifications -->

    </div><!-- .single_product_specifications -->

</div>

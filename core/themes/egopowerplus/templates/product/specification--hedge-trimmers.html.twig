{#
/**
 * @file
 * Block to display the specification fields (if available) for hedge trimmers
 *
 * Fields: Blade Length (cm)
 * Blade Gap (mm)
 * Blade Tooth Depth (mm)
 * Run Time 2.0Ah (mins)
 * Run Time 4.0Ah (mins)
 * Run Time 5.0Ah (mins)
 * Run Time 7.5Ah (mins)
 * Speed Control
 * No Load Speed (spm)
 * Blade Type
 * Cutting Action
 * Blade Tip Protector
 * Sound Pressure LpA
 * Sound Pressure LwA
 * Rotating Handle 
 * Vibration (M/S2)
 * Weight without battery (kg)
 * Motor Type
 */
#}

<div class="content_block content_block_single_product_specifications">

	<div class="single_product_specifications">
    
		<div class="title">Specifications</div>

  		<ul class="specifications">

            {% if content.field_spec_blade_length_cm|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Blade Length</div>
                        
                        <div class="value">{{ content.field_spec_blade_length_cm }}cm</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_blade_gap_mm|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Blade Gap</div>
                        
                        <div class="value">{{ content.field_spec_blade_gap_mm }}mm</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_blade_tooth_depth_mm|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Blade Tooth Depth</div>
                        
                        <div class="value">{{ content.field_spec_blade_tooth_depth_mm }}mm</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_run_time_2|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Run Time 2.0Ah</div>
                        
                        <div class="value">{{ content.field_spec_run_time_2 }}mins</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_run_time_4|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Run Time 4.0Ah</div>
                        
                        <div class="value">{{ content.field_spec_run_time_4 }}mins</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_run_time_5|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Run Time 5.0Ah</div>
                        
                        <div class="value">{{ content.field_spec_run_time_5 }}mins</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_run_time_75|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Run Time 7.5Ah</div>
                        
                        <div class="value">{{ content.field_spec_run_time_75 }}mins</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_speed_control|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Speed Control</div>
                        
                        <div class="value">{{ content.field_spec_speed_control }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_no_load_speed_spm|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">No Load Speed</div>
                        
                        <div class="value">{{ content.field_spec_no_load_speed_spm }}spm</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_blade_type|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Blade Type</div>
                        
                        <div class="value">{{ content.field_spec_blade_type }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_cutting_action|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Cutting Action</div>
                        
                        <div class="value">{{ content.field_spec_cutting_action }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_blade_tip_protector|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Blade Tip Protector</div>
                        
                        <div class="value">{{ content.field_spec_blade_tip_protector }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_sound_pressure_lpa|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Sound Pressure</div>
                        
                        <div class="value">{{ content.field_spec_sound_pressure_lpa }}LpA</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_sound_pressure_lwa|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Sound Pressure</div>
                        
                        <div class="value">{{ content.field_spec_sound_pressure_lwa }}LwA</div>
                    
                    </div>
                

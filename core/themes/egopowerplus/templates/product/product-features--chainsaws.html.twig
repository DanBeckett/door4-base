<div class="content_block content_block_single_product_features">

    <div class="single_product_features">

        <div class="title">Product features</div>
        
        <ul class="features">

            {% if node.field_show_chainsaw_ft_bar.value %}

                <li>
                
                    <div class="feature">
                    
                        <div class="icon" style="background-image:url(/{{base_path ~ directory}}/images/product_feature_icons/png/bar_length.png);"><img src="/{{base_path ~ directory}}/images/blocks/single_product_features/dimensional_assurance_100_100.png"></div>
                        
                        <div class="icon svg" style="background-image:url(/{{base_path ~ directory}}/images/product_feature_icons/svg/bar_length.svg);"><img src="/{{base_path ~ directory}}/images/blocks/single_product_features/dimensional_assurance_100_100.png"></div>
                        
                        <div class="label">{{ content.field_chainsaw_ft_bar }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if node.field_show_chainsaw_ft_chain_spd.value %}

                <li>
                
                    <div class="feature">
                    
                        <div class="icon" style="background-image:url(/{{base_path ~ directory}}/images/product_feature_icons/png/chain_speed.png);"><img src="/{{base_path ~ directory}}/images/blocks/single_product_features/dimensional_assurance_100_100.png"></div>
                        
                        <div class="icon svg" style="background-image:url(/{{base_path ~ directory}}/images/product_feature_icons/svg/chain_speed.svg);"><img src="/{{base_path ~ directory}}/images/blocks/single_product_features/dimensional_assurance_100_100.png"></div>
                        
                        <div class="label">{{ content.field_chainsaw_ft_chain_spd }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if node.field_show_chainsaw_ft_chain_brk.value %}

                <li>
                
                    <div class="feature">
                    
                        <div class="icon" style="background-image:url(/{{base_path ~ directory}}/images/product_feature_icons/png/chain_brake.png);"><img src="/{{base_path ~ directory}}/images/blocks/single_product_features/dimensional_assurance_100_100.png"></div>
                        
                        <div class="icon svg" style="background-image:url(/{{base_path ~ directory}}/images/product_feature_icons/svg/chain_brake.svg);"><img src="/{{base_path ~ directory}}/images/blocks/single_product_features/dimensional_assurance_100_100.png"></div>
                        
                        <div class="label">{{ content.field_chainsaw_ft_chain_brk }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if node.field_show_chainsaw_ft_brushless.value %}

                <li>
                
                    <div class="feature">
                    
                        <div class="icon" style="background-image:url(/{{base_path ~ directory}}/images/product_feature_icons/png/brushless_motor.png);"><img src="/{{base_path ~ directory}}/images/blocks/single_product_features/dimensional_assurance_100_100.png"></div>
                        
                        <div class="icon svg" style="background-image:url(/{{base_path ~ directory}}/images/product_feature_icons/svg/brushless_motor.svg);"><img src="/{{base_path ~ directory}}/images/blocks/single_product_features/dimensional_assurance_100_100.png"></div>
                        
                        <div class="label">{{ content.field_chainsaw_ft_brushless }}</div>
                    
                    </div>
                
                </li>

            {% endif %}
        
        </ul><!-- .features -->
    
    </div><!-- .single_product_features -->

</div>

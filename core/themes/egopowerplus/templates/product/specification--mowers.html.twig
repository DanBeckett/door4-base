                </li>

            {% endif %}

            {% if content.field_spec_noise_rating_lpa|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Noise Rating (LpA)</div>
                        
                        <div class="value">{{ content.field_spec_noise_rating_lpa }}LpA</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_noise_rating_lwa|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Noise Rating (LwA)</div>
                        
                        <div class="value">{{ content.field_spec_noise_rating_lwa }}LwA</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_vibration_ms|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Vibration</div>
                        
                        <div class="value">{{ content.field_spec_vibration_ms }}m/s</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_vertical_storage|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Vertical Storage</div>
                        
                        <div class="value">{{ content.field_spec_vertical_storage }}</div>
                    
                    </div>
                
                </li>

            {% endif %}

            {% if content.field_spec_weight_wo_battery_kg|render|trim is not empty %}
        
                <li>
                
                    <div class="specification">
                    
                        <div class="label">Weight without Battery</div>
                        
                        <div class="value">{{ content.field_spec_weight_wo_battery_kg }}kg</div>
                    
                    </div>
                
                </li>

            {% endif %}

        </ul><!-- .specifications -->

    </div><!-- .single_product_specifications -->

</div>
